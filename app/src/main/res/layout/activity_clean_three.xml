<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".clean_activity.CleanActivityThree">
    <RelativeLayout
        android:gravity="center_vertical"
        android:background="@drawable/title"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#fff"
                android:textSize="20dp"
                />
        </LinearLayout>


        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/clean_back_img_three"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back"
            />

    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="3.点击按钮将水从不同出料口排出，待水全部拍出本轮清洗完毕"
            android:textSize="23dp"
            android:textColor="#333"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_marginRight="10dp"
            android:button="@null"
            android:id="@+id/clean_three_a"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:background="@drawable/box_a"
            />

        <CheckBox
            android:layout_marginRight="10dp"
            android:button="@null"
            android:id="@+id/clean_three_b"
            android:layout_weight="1"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:background="@drawable/box_b"
            />

        <CheckBox
            android:button="@null"
            android:id="@+id/clean_three_c"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:background="@drawable/box_c"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:src="@drawable/clean_img_two"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/three_wc"
            android:layout_weight="1"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:src="@drawable/accomplish"
            />

    </LinearLayout>

</LinearLayout>