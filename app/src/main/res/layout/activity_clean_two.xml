<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".clean_activity.CleanActivityTwo">
    <RelativeLayout
        android:gravity="center_vertical"
        android:background="@drawable/title"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#fff"
                android:textSize="20dp"
                />
        </LinearLayout>


        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/clean_back_img_two"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back"
            />

    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="2.待冰激凌出完，将清水及洗涤剂倒入物料桶，点击冰激凌机上的“清洗”按钮，清洗3至4分钟，然后点击下一步"
            android:textSize="23dp"
            android:textColor="#333"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="fitXY"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:src="@drawable/clean_img_two"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/next_btn_two"
            android:layout_weight="1"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:src="@drawable/ntxtbtn"
            />

    </LinearLayout>

</LinearLayout>