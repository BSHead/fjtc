<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".operation_activity.OperationPageActivity">
   <RelativeLayout
       android:gravity="center_vertical"
       android:background="@drawable/title"
       android:layout_width="match_parent"
       android:layout_height="50dp">

       <LinearLayout
           android:gravity="center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/title_tv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="操作页"
               android:textColor="#fff"
               android:textSize="20dp"
               />
       </LinearLayout>

       <ImageView
           android:layout_marginLeft="5dp"
           android:id="@+id/back_img"
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:src="@drawable/back"
           />
   </RelativeLayout>
    <!--<ScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->
        <!--<LinearLayout-->
            <!--android:orientation="vertical"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->



        <!--</LinearLayout>-->
    <!--</ScrollView>-->

    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/clean_ll"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="34dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/rinse"
                />
            <TextView
                android:textColor="#000"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清洗"
                android:textSize="20dp"/>
            <TextView
                android:textColor="#000"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="按照提示清机器"
                android:textSize="15dp"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/replenishment_ll"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="28dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="34dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/goods"
                />
            <TextView
                android:textColor="#000"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="补货"
                android:textSize="20dp"/>
            <TextView
                android:textColor="#000"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="按照提示补充物料"
                android:textSize="15dp"

                />
        </LinearLayout>

    </LinearLayout>
//-----------------------
    <LinearLayout

        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/set_ll"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="34dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/set"
                />
            <TextView
                android:textColor="#000"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="售卖设置"
                android:textSize="20dp"/>
            <TextView
                android:gravity="center"
                android:textColor="#000"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置冰激凌口味以及售卖价格"
                android:textSize="15dp"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sell_ll"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="28dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/oper_image"
                android:layout_marginTop="34dp"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/oper_noo"
                />
            <TextView
                android:id="@+id/oper_text"
                android:textColor="#000"
                android:layout_marginTop="28dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="正在获取机器状态..."
                android:layout_marginBottom="25dp"
                android:textSize="20dp"/>


                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>